<Page x:Class="DetailsCorp.Pages.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DetailsCorp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailPage">

    <Grid>
        <DataGrid x:Name="ViewDetail" AutoGenerateColumns="False" ColumnWidth="*" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование детали" Binding="{Binding NameDetail}"/>
                <DataGridTextColumn Header="Артикул детали" Binding="{Binding ArticulDetail}"/>
                <DataGridTextColumn Header="Стоимость детали" Binding="{Binding CostDetail}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
