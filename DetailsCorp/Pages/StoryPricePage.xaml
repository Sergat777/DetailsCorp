<Page x:Class="DetailsCorp.Pages.StoryPricePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DetailsCorp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StoryPricePage">

    <Grid>
        <DataGrid x:Name="ViewStoryPrice" AutoGenerateColumns="False" ColumnWidth="*" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование детали" Binding="{Binding Detail.NameDetail}"/>
                <DataGridTextColumn Header="Наименование поставщика" Binding="{Binding Supplier.NameSupplier}"/>
                <DataGridTextColumn Header="Дата изменения цены" Binding="{Binding DateChange}"/>
                <DataGridTextColumn Header="Новое значение цены" Binding="{Binding NewPrice}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
