<Page x:Class="DetailsCorp.Pages.SupplierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DetailsCorp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SupplierPage">

    <Grid>
        <DataGrid x:Name="ViewSupplier" AutoGenerateColumns="False" ColumnWidth="*" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование поставщиков" Binding="{Binding NameSupplier}"/>
                <DataGridTextColumn Header="Адресс поставщика" Binding="{Binding AdressSupplier}"/>
                <DataGridTextColumn Header="Телефон поставщика" Binding="{Binding PhoneSupplier}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
